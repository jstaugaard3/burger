  <div class="container">
    <div class="row text-center">
      <img class="img-center" src="/assets/image/burger.png">
    </div>

    <h1 class="display-4 text-center">Eat-Da-Burger</h1>
    <p class="lead text-center">Track you consumption of all burgers in one place!</p>
  </div>
  {{!-- </div> --}}

<div class="container">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body">
          {{!-- <ul> --}}
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
            {{!-- </ul> --}}
        </div>
      </div>
    </div>
    <div class="col">

      <div class="card">
        <div class="card-body">
          {{!-- <ul> --}}
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block-ate devoured=false}}
            {{/if}}
            {{/each}}
            {{!-- </ul> --}}


        </div>
      </div>

    </div>
  </div>

</div>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-4">

    </div>

    <div class="col-4">
      <div class="card mx-auto">
        <div class="card-body">

          <form class="create-form">
            <div class="form-group">
              <input type="text" class="form-control" id="ca" name="name">
            </div>
            <button type="submit" class="btn btn-primary">Add Burger</button>
          </form>










        </div>
      </div>
    </div>

  </div>
</div>